  "description": "Count the number of words in an ebook",
  "main": "lib/index.js",
  "dependencies": {
    "commander": "3.0.2",
    "debug": "4.1.1",
    "epub": "1.2.0",
    "lodash": "^4",
    "mz": "^2.7.0",
    "parse-entities": "1.2.2",
    "promisify-event": "1.0.0",
    "update-notifier": "^2.2"
  },
  "bin": {
    "word-count": "./lib/cli.js"
  },
  "files": [
    "lib/*.js",
    "index.d.ts",
    "utils.d.ts"
  ],
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@types/debug": "4.1.5",
    "@types/jest": "24.0.21",
    "@types/lodash": "^4",
    "@types/mock-fs": "4.10.0",
    "@types/mz": "0.0.32",
    "@types/update-notifier": "^2.2",
    "jest": "24.9.0",
    "mock-fs": "4.10.2",
    "stdout-stderr": "0.1.9",
    "ts-jest": "24.1.0",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.6.4"
  },
  "scripts": {
    "test": "jest",
    "version": "tsc",
    "lint": "tslint -p .",
    "validate": "yarn test && yarn lint",
    "release": "npx np",
    "build": "npx tsc"
  },
  "keywords": [
    "epub",
    "ebook",
    "stats"
  ],
  "author": "David Brownman <beamneocube@gmail.com> (https://davidbrownman.com)",
